{% extends "../layout.twig" %}

{% block stylesheet %}
    <link rel="stylesheet" href="css/home.css" />
{% endblock %}

{% block javascript %}
    <script src="js/home.js"></script>
{% endblock %}

{% block header %}
    {% embed "../default/header.twig" %}
        {% block navbar_menu %}
            <li><a href="classes">Mes classes</a></li>
            <li class="active"><a href="#">Mes questionnaires</a></li>
            <li><a href="statistiques">Mes statistiques</a></li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>All Users</h1>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="row" id="addUser">
            <div class="col-md-10">
                <input class="form-control" name="userName" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-success" style="width: 100%;">Add</button>
            </div>
        </div>

    </div>
{% endblock %}